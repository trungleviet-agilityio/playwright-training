# Playwright Configuration
HEADLESS=true
BROWSER_PROVIDER=browserbase  # or "local"
BROWSER_WS_ENDPOINT=

# Browserbase Configuration
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Slack OAuth Configuration
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:8000/auth/slack/callback
SLACK_SCOPES=channels:read,chat:write,users:read,team:read

# 2FA Handler Preferences
TWOFA_HANDLER_PREFERENCES=pyotp,manual

# Session Management
SESSION_REUSE_ENABLED=true
SESSION_TIMEOUT_MINUTES=60

# Storage Configuration
STORAGE_TYPE=mock
DYNAMODB_TABLE_NAME=auth-sessions
DYNAMODB_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
